@model TravelTripProject.Models.Classes.Blog
@{
    ViewBag.Title = "GetBlogById";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Update Page</h2>
<br />

@using (Html.BeginForm("UpdateBlog", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly="readonly" })

    <br />
    @Html.LabelFor(x => x.BlogTitle)
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.BlogDate)
    @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.BlogDescription)
    @Html.TextAreaFor(x => x.BlogDescription,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update Blog</button>
}

